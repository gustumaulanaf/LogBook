<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/layoutItemLogbook"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tanggalLog"
        android:text="2019-10-10"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:layout_width="70dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tanggalLog"
        android:textSize="12sp"
        android:id="@+id/namaKegiatanLog"
        android:text="Verifikasi log book pegawai"
        android:textColor="@color/hitam"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:id="@+id/btEdit"
        android:layout_toLeftOf="@id/btHapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:id="@+id/btHapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>